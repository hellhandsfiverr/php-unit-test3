{
    "name": "alldigitalrewards/skeleton-service",
    "type": "project",
    "require": {
        "slim/slim": "^3.9",
        "slim/twig-view": "^2.3",
        "jojihere/monolog-fluent": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "AllDigitalRewards\\Skeleton\\": "app"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "check-style": "vendor/bin/phpcs -p --standard=phpcs.xml app",
        "fix-style": "vendor/bin/phpcbf -p --standard=phpcs.xml app"
    }
}
